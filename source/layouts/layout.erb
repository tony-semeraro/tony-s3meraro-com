<head>
  <meta charset="UTF-8">
  <meta name="description" content="" />
  <meta name="copyright" content="" />
  <link type="text/plain" rel="author" href="/humans.txt" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="HandheldFriendly" content="True" />
  <meta name="MobileOptimized" content="320" />
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

  <meta http-equiv="cleartype" content="on">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<link href='http://fonts.googleapis.com/css?family=Cousine' rel='stylesheet' type='text/css'>

  <title><%= current_page.data.title || data.site.site_title %></title>
  <%= stylesheet_link_tag "normalize" %>
  <%= stylesheet_link_tag "app", :media => "screen"  %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  
  <%= yield_content :stylesheets %>

  <% if content_for? :styles %>
  <style type="text/css">
  <%= yield_content :styles %>
  </style>
  <% end %>

  <!-- IE backporting -->
<!--[if lt IE 9]>
<%= javascript_include_tag "html5" %>
<![endif]-->

<%= yield_content :head %>
</head>
<body class= "antialiased">
 <%= partial "layouts/nav" %>
 <div class = "row" id="wrap">
  <div class = "row">
    <div class = "nop status-headline small-5 large-offset-4 columns"> <%= data.site.status_headline %>  </div>
    <!-- yield -->
    <div class="">          
      <%= yield  %>    
    </div>  
</div> 
</div>

<!-- Footer -->
<%= partial "layouts/footer" %>




<!-- Javascript -->
<%= javascript_include_tag "app" %>

<%= yield_content :javascripts %>

<script type="text/javascript">



$.backstretch( "<%= current_page.data.background || data.site.default_background %>");










</script>


</body>
</html>
